{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "isolatedModules": true, // for Parcel
        "jsx": "react-jsx",
        "lib": [
            "DOM",
            "ES2022"
        ],
        "noEmit": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types",
        ]
    },
    "exclude": ["node_modules"],
    "include": [
        "**/*.ts",
        "**/*.tsx",
    ],
}
